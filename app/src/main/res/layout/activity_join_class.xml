<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinClass">

    <EditText
        android:id="@+id/JoinClassId"
        android:layout_width="327dp"
        android:layout_height="49dp"
        android:layout_marginTop="196dp"
        android:ems="10"
        android:hint="Class ID"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/JoinClassButton"
        android:layout_width="331dp"
        android:layout_height="102dp"
        android:layout_marginTop="48dp"
        android:onClick="joinClassButton"
        android:text="Join Class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JoinClassId" />
</androidx.constraintlayout.widget.ConstraintLayout>